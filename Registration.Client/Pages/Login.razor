@page "/login"
<h3>Login</h3>

@if (ShowAuthError)
{
    <div class="alert alert-danger" role="alert">
        <p>@Errorr</p>
    </div>
}


<EditForm Model="_LoginModel" OnValidSubmit="ExecuteLogin" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="regId" class="col-md-2 col-form-label">Registration ID:</label>
        <div class="col-md-10">

            <InputNumber id="regId" class="form-control" @bind-Value="_LoginModel.RegistrationId" />
            <ValidationMessage For="@(() => _LoginModel.RegistrationId)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="password" class="col-md-2 col-form-label">Password:</label>
        <div class="col-md-10">
            <InputText type="password" id="password" class="form-control" @bind-Value="_LoginModel.Password" />
            <ValidationMessage For="@(() => _LoginModel.Password)" />
        </div>
    </div>


    <div class="form-group row">
        <label for="usertype" class="col-md-2 col-form-label">CHECK IF ADMIN:</label>
        <div class="col-md-10">
            <h4>Admin</h4>
    <InputCheckbox @bind-Value="@_LoginModel.IsAdmin">ADMIN</InputCheckbox>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
</EditForm>